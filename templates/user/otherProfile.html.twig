{% extends 'layout.html.twig' %}

{% block title %} {{ parent() }} | Profil participant{% endblock %}

{% block main %}

    <div class="container">

        <div class="row mb-4 mt-4">
            <div class="col text-center">
                <h2>{{ participant.username }}</h2>
            </div>
        </div>

        <div class="row justify-content-center">

            <div class="col-lg-5 ml-auto mr-auto">


                <div class="form-group row">
                    <div class="col-lg-6">
                        Prénom :
                    </div>
                    <div class="col-lg-6">
                        {{ participant.prenom }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-6">
                        Nom :
                    </div>
                    <div class="col-lg-6">
                        {{ participant.nom | upper }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-6">
                        Téléphone :
                    </div>
                    <div class="col-lg-6">
                        {{ participant.telephone }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-6">
                        Email :
                    </div>
                    <div class="col-lg-6">
                        {{ participant.mail }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-6">
                        Campus :
                    </div>
                    <div class="col-lg-6">
                        {{ participant.campus.nom }}
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col">
                        <a href="{{ path('sorties_accueil') }}" class="btn btn-secondary btn-lg">Retour</a>
                    </div>
                </div>
            </div>
    </div>

{% endblock %}