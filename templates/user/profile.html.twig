{% extends "layout.html.twig" %}

{% form_theme gererProfilForm 'user/bootstrap_4_layout.html.twig' %}

{% block title %} {{ parent() }} |  GÃ©rer mon profil {% endblock %}

{% block main %}

    <div class="container">

        <div class="row mb-4 mt-4">
            <div class="col text-center">
                <h2>Mon profil</h2>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-5 ml-auto mr-auto">


                {{ form_start(gererProfilForm) }}

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.username) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.username) }}
                    </div>
                    {{ form_errors(gererProfilForm.username) }}
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.nom) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.nom) }}
                    </div>
                    {{ form_errors(gererProfilForm.nom) }}
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.prenom) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.prenom) }}
                    </div>
                    {{ form_errors(gererProfilForm.prenom) }}
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.telephone) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.telephone) }}
                    </div>
                    {{ form_errors(gererProfilForm.telephone) }}
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.mail) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.mail) }}
                    </div>
                    {{ form_errors(gererProfilForm.mail) }}
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        {{ form_widget(gererProfilForm.password) }}
                    </div>
                    {{ form_errors(gererProfilForm.password) }}
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.campus) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.campus) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        {{ form_label(gererProfilForm.photo) }}
                    </div>
                    <div class="col-sm-9">
                        {{ form_widget(gererProfilForm.photo) }}
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col">
                        <button type="submit button" class="btn btn-secondary btn-lg">Enregistrer</button>

                        <button type="reset button" class="btn btn-secondary btn-lg">Annuler</button>

                    </div>
                </div>


                {{ form_end(gererProfilForm) }}
            </div>
        </div>
    </div>
{% endblock %}




