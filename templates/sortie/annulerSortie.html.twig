{% extends "layout.html.twig" %}

{% form_theme annulerSortieForm 'sortie/bootstrap_4_layout.html.twig' %}

{% block title %} {{ parent() }} |  Annuler sortie {% endblock %}

{% block main %}

    <div class="container">

<div class="row mb-4 mt-4">
    <div class="col text-center">
        <h2>Annuler sortie</h2>
    </div>
</div>

        <div class="row">

            <div class="col-lg-3"></div>

            <div class="col-lg-6 ml-auto mr-auto">

                <div class="form-group row">
                    <div class="col-sm-6 col-form-label">
                       <label>Nom de la sortie</label>
                    </div>
                    <div class="col-sm-6">
                        {{ sortie.nom }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 col-form-label">
                        <label>Date de la sortie</label>
                    </div>
                    <div class="col-sm-6">
                        {{ sortie.dateHeureDebut| format_datetime(locale='fr') }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 col-form-label">
                        <label>Campus</label>
                    </div>
                    <div class="col-sm-6">
                        {{ sortie.campusOrganisateur.nom|upper }}
                    </div>
                </div>

                {% if sortie.lieu is not null %}
                    <div class="form-group row">
                        <div class="col-sm-6 col-form-label">
                            <label>Lieu</label>
                        </div>
                        <div class="col-sm-6">
                             {{ sortie.lieu.nom }}, {{ sortie.lieu.rue }}
                            {% if sortie.lieu.ville is not null %}
                            {{ sortie.lieu.ville.codePostal }}, {{ sortie.lieu.ville.nom }}
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

        </div>
            <div class="col-lg-3"></div>
        </div>


{{ form_start(annulerSortieForm) }}
        <div class="form-group mt-5">
        <div class="col text-center mb-3">
        {{ form_label(annulerSortieForm.infosSortie) }}
            </div>
        <div class="col-6 m-auto">
        {{ form_widget(annulerSortieForm.infosSortie) }}
        </div>
        </div>
<div class="row text-center mt-5">
    <div class="col">
        <button type="submit" class="btn btn-secondary btn-lg">Enregistrer</button>
        <button type="reset" class="btn btn-secondary btn-lg">Annuler</button>

    </div>
</div>

{{ form_end(annulerSortieForm) }}

    </div>

{% endblock %}
