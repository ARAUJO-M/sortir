<!doctype html>

<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap-4.5.2/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('bootstrap-4.5.2/css/bootstrap-grid.css') }}">
            <link rel="stylesheet" href="{{ asset('bootstrap-4.5.2/css/bootstrap-reboot.css') }}">
        {% endblock %}
    </head>

    <body>

    <div class="container">

    <header>
        {% include('inc/nav.html.twig') %}
    </header>

        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}

    <main>
        {% block main %}

        {% endblock %}
    </main>

    <footer>
        {% include('inc/footer.html.twig') %}
    </footer>

    </div><!--fin div class container-->

    <script src="{{ asset('bootstrap-4.5.2/js/bootstrap.js') }}"></script>
    <script src="{{ asset('bootstrap-4.5.2/js/bootstrap.bundle.js') }}"></script>

    </body>
</html>
